<!DOCTYPE html>
<html>
  <head>
    <title>Luz Elena Castro | Photojournalist </title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Basic stylesheet -->
  </head>

  <body>
    <div id="wrapper">
      <!-- Sidebar -->
      <!-- /#sidebar-wrapper -->
      <div id="sidebar-wrapper" class="toggled">
        <ul class="sidebar-nav">

          <li class="sidebar-brand">
             <%= link_to 'Luz Castro', root_path %>
          </li>

          <li>  <%= link_to 'Home', '/home' %>
          </li>
          <li><%= link_to 'About Me', '/aboutme' %>
          </li>

          <li>
            <%= link_to 'Exhibitions & Awards', '/exhibitions' %>

          </li>

          <li>  <%= link_to 'Photojournalism', '/photojournalism' %>
          </li>

          <li>  <%= link_to 'Interviews & Features', '/features' %>
          </li>

        </ul>
      </div>
      <!-- Page Content -->
      <div id="page-content-wrapper">
        <div class="container">
          <div class="jumbotron jumbotron-fluid">

            <div class="luztitle">
              <a href="" class="btn btn-default" id="menu-toggle">
                <%= image_tag("menu.png", :alt => "menu", :class => "menu") %>
              </a>
              LUZ ELENA CASTRO | Photojournalist</div>
          </div>
          <div class="row" id="page-yield">
              <%= yield %>
          </div>
        </div>
      </div>
      <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->
  </body>
</html>
